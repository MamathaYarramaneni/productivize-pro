{
    "name": "Productivity Timer",
    "version": "1.0.1",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png",
        "default_title": "Pomodoro Timer"
    },
    "icons": {
        "128": "icon.png"
    },
    "permissions": [
        "storage",
        "alarms",
        "notifications"
    ],
    "background": {
        "service_worker": "background.js"
    }
}